                            <Label Content="ROMFS Checksumed Size:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_romfs_size" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
