                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding build_dialog.IsWriting}" Value="True">
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding build_dialog.CurrentLength}" Value="0">
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Build Number:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_number" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Build Flags:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_flags" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Found Code Checksum:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_code_checksum" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Actual Code Checksum:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_calculated_code_checksum" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31"/>
                        <Grid Height="31"/>

                        <Grid Height="31">
                            <Label Content="Build Size:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_length" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Code Checksumed Size:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_code_length" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Code Address:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_code_shrunk_offset" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Code Size:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_code_shrunk_size" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Jump Offset (start):" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_jump_offset" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Build Base:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_base" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="ROMFS Base:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_romfs_base" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Found ROMFS Checksum:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_romfs_checksum" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Actual ROMFS Checksum:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_calculated_romfs_checksum" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31"/>

