                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource IsEqualConverter}">
                                                    <Binding Path="type" />
