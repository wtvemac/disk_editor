                        <Grid Height="31">
                            <Label Content="Initial Heap Size:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_heap_size" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Heap Data Address:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_heap_data_offset" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Data Size (w/lzss):" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_heap_data_compressed_size" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Data Size (w/o lzss):" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="current_build_heap_data_size" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="1" Name="new_build" Header="Replacement Build" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" MinHeight="745" MinWidth="321">
