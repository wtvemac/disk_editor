                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </GroupBox.Style>
                    <StackPanel>
                        <Grid Height="36">
                            <Button Command="{Binding export_build_image}" Content="Export Build" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" Height="23">
