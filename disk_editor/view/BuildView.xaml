                        <Style TargetType="{x:Type GroupBox}" BasedOn="{StaticResource {x:Type GroupBox}}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </GroupBox.Style>
                    <StackPanel>
                        <Grid Height="36">
                            <TextBox Name="new_file_path" Text="" TextWrapping="NoWrap" IsReadOnly="True" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="213" FontSize="14"/>
                            <Button Command="{Binding load_build_image}" Content="Find Image" Margin="0,10,6,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="76" Height="23"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Build Number:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Name="new_build_number" Text="-" TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="136"/>
                        </Grid>

                        <Grid Height="31">
                            <Label Content="Build Flags:" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
