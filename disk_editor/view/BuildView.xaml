                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        <Setter Property="FontFamily" Value="{StaticResource WindowFontFamily}"/>
                        <Setter Property="FontWeight" Value="{StaticResource WindowFontWeight}"/>
                        <Setter Property="Margin" Value="0,72,0,0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="True">
                                <Setter Property="Margin" Value="0,10,0,0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="False">
                                <Setter Property="Margin" Value="0,72,0,0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <ComboBox ItemsSource="{Binding build_dialog.BuildLocations, Mode=TwoWay}" SelectedIndex="0" Name="partition_build_locations" SelectionChanged="on_build_location_change" VerticalAlignment="Top" Width="297" HorizontalAlignment="Left">
