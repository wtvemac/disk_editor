        <Grid.RowDefinitions>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="{x:Type RowDefinition}">
                        <Setter Property="Height" Value="110"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding build_dialog.OnlyInfo}" Value="True"/>
                                    <Condition Binding="{Binding build_dialog.SelectedObjectLocation.type}" Value="{x:Static self:ObjectLocationType.FILE_LOCATION}"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Height" Value="40"/>
                            </MultiDataTrigger>
                            <DataTrigger Binding="{Binding build_dialog.OnlyInfo}" Value="False">
                                <Setter Property="Height" Value="110"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>

